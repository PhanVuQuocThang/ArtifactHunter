            font_size: '22sp'
            size_hint_y: 0.25
            background_color: 0.2, 0.6, 0.8, 0.5
            on_press: root.show_how_to_play()
        Button:
            text: '‚öôÔ∏è Settings'
            font_size: '22sp'
            size_hint_y: 0.25
            background_color: 0.2, 0.6, 0.8, 0.5
            on_press: root.open_settings()
        Button:
            text: '‚ùå Quit'
            font_size: '22sp'
            size_hint_y: 0.25
            background_color: 0.8, 0.2, 0.2, 0.9  # Reddish for quit
            on_press: root.quit_game()

