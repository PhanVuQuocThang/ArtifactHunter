<SettingScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/backgrounds/level_selection.jpg'

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, None
            height: self.minimum_height
            spacing: 20
            padding: 40

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.4  # khung m·ªù
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

            Label:
                text: "‚öôÔ∏è Settings"
                font_size: '28sp'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            Label:
                text: "üéµ Music Volume"
                font_size: '18sp'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            Slider:
                min: 0
                max: 100
                value: 70
                size_hint_y: None
                height: 40
                on_value: root.set_music_volume(self, self.value)

            Label:
                text: "üîä SFX Volume"
                font_size: '18sp'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            Slider:
                min: 0
                max: 100
                value: 80
                size_hint_y: None
                height: 40
                on_value: root.set_sfx_volume(self, self.value)

            Label:
                text: "üñ•Ô∏è Display Mode"
                font_size: '18sp'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            ToggleButton:
                text: "Full ScreenScreen"
                size_hint_y: None
                height: 40
                on_press: root.toggle_fullscreen(self)

            Button:
                text: "üîô Back"
                font_size: '18sp'
                size_hint_y: None
                height: 48
                background_color: 0.3, 0.3, 0.3, 0.9
                on_press: root.back_to_previous()
                
