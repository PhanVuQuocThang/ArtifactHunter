    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.4, 0.6
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        spacing: 20
        padding: [50, 0, 50, 0]

        Button:
            text: '‚ñ∂ Start 1 2 3 4 5 6 7'
            font_size: '22sp'
